<%include ../partials/header%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead" style='margin-top:7.0em'>yelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
        </div><!-- first col ending -->
  
        <div class="col-md-9">
            <div class="thumbnail">
                 <img class="image-responsive" src="<%=campground.image%>">
                 <div class="caption-full">
                    <h4 style="text-align:right;">$9.00/night</h4>
                    <h4><a><%= campground.name%></a></h4>
                    <p><%=campground.description%></p>
                 </div>
            </div>
        </div><!-- second col ending-->
     </div><!-- row ending -->
 </div><!-- container ending -->
 <div class="container-fluid w-75  mr-0">
    
    <a  class="btn btn-primary mb-3 rounded shadow"  href="/campgrounds/<%=campground._id%>/comments/new">Add comment</a>
    <% campground.comments.forEach(function(comment){%>
    <div class="row bg-light shadow ml-5 mb-3 ">
        <div class="col-md pt-3  text-left">
           <h5> <%=comment.author.username%></h5>
           <hr>
           <p class="text-muted"><%= comment.text %></p>
        </div>
        
    </div>
    
    <%});%>
 </div>
<%include ../partials/footer%>
