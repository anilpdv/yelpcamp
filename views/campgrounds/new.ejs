<% include ../partials/header %>

<!--container div-->
<div class="container">

	<h1 style="text-align: center;font-family:Montserrat;margin-top: 20px;margin-bottom: 20px;">Create a New Campground</h1>

	<!--form of the campgrounds page-->
	<div style="width:30%;margin:0 auto;">
		<form action="/campgrounds" method='POST'>

			<div class="form-group">	
				<input class="form-control" type="text" name="name" placeholder="name">	
			</div>

			<div class="form-group">
				<input class="form-control" type="text" name="image" placeholder="image url">
			</div>
			
			<div class="form-group">
				<textarea class="form-control" name="description" placeholder="description"></textarea>
			</div>
			<div class="form-group">
				<button class='btn btn-primary btn-sl btn-block'>Submit!</button>
			</div>
		</form>
		<a style="font-family: Dancing Script" href="/campgrounds">Go back</a>
	</div>
</div>

